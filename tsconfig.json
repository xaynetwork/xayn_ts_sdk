{
    // tsconfig used for TESTING AND DEVELOPMENT
    // For now this will use node-lts-strictest-esm, but it might switch
    // to something else in the future.
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@tsconfig/node-lts-strictest-esm/tsconfig.json",
    "compilerOptions": {
        // We don't actually support DOM, but it's
        // the simplest way to get fetch type definitions
        // and we require a fetch polyfill.
        "lib": ["ES2015", "DOM"],
        "rootDirs": ["src/", "tests/"],
        "declaration": true,
        "noEmit": true
    },
    "include": [ "src/**/*", "tests/**/*" ]
}
