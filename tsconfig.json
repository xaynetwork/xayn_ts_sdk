{
    // tsconfig used for TESTING AND DEVELOPMENT
    // For now this will use node-lts-strictest-esm, but it might switch
    // to something else in the future.
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@tsconfig/node-lts-strictest-esm/tsconfig.json",
    "compilerOptions": {
        "rootDirs": ["src/", "tests/"],
        "declaration": true,
        "noEmit": true
    },
    "include": [ "src/**/*", "tests/**/*" ]
}
