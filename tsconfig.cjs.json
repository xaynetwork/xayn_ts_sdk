{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@tsconfig/strictest/tsconfig.json",
    "compilerOptions": {
        // We don't actually support DOM, but it's
        // the simplest way to get fetch type definitions
        // and we require a fetch polyfill.
        "lib": ["ES2015", "DOM"],
        "outDir": "dist/cjs",
        "module": "CommonJS",
        "target": "ES2015",
        "declaration": true
    },
    "include": [ "src/**/*" ]
}
